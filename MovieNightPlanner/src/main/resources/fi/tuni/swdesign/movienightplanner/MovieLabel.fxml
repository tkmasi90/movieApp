<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane fx:id="movieLabel" maxHeight="260.0" maxWidth="420.0" minHeight="260.0" minWidth="420.0" prefHeight="260.0" prefWidth="420.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fi.tuni.swdesign.movienightplanner.controllers.MovieLabelController">
   <children>
      <ImageView fx:id="movieLabelImage" fitHeight="260.0" fitWidth="420.0" pickOnBounds="true" preserveRatio="true">
         <viewport>
            <Rectangle2D />
         </viewport>
      </ImageView>
      <HBox maxHeight="55.0" style="-fx-background-color: RGB(155,165,183, 0.9);" StackPane.alignment="BOTTOM_CENTER">
         <children>
            <VBox>
               <children>
                  <Text fx:id="movieLabelName" strokeType="OUTSIDE" strokeWidth="0.0" text="Star Wars: The Force Awakens" wrappingWidth="270.0">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Text>
                  <Text fx:id="movieLabelYear" strokeType="OUTSIDE" strokeWidth="0.0" text="2015" />
               </children>
               <padding>
                  <Insets bottom="4.0" left="4.0" top="4.0" />
               </padding>
            </VBox>
            <TilePane fx:id="movieLabelLogos" alignment="BOTTOM_RIGHT" hgap="4.0" prefHeight="200.0" prefRows="1" prefWidth="200.0" tileAlignment="BOTTOM_RIGHT" vgap="4.0">
               <padding>
                  <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
               </padding></TilePane>
         </children>
      </HBox>
   </children>
</StackPane>
